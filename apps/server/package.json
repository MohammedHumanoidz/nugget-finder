{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
		"db:push": "prisma db push --schema ./prisma/schema",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate --schema ./prisma/schema",
		"db:migrate": "prisma migrate dev"
	},
	"prisma": {
		"schema": "./schema"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.2.0",
		"@elysiajs/trpc": "^1.1.0",
		"@openrouter/ai-sdk-provider": "^0.7.3",
		"@prisma/client": "^6.12.0",
		"@trpc/client": "^11.4.2",
		"@trpc/server": "^11.4.2",
		"ai": "^4.3.19",
		"better-auth": "^1.3.0",
		"dotenv": "^16.4.7",
		"elysia": "^1.2.25",
		"winston": "^3.17.0",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"tsdown": "^0.12.9",
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"@types/node": "^20.0.0",
		"prisma": "^6.12.0"
	}
}
